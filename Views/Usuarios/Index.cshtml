@model IEnumerable<tl2_proyecto_2024_Daggam.ViewModels.ListarUsuarioViewModel>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="text-center">
    <h1 class="display-4">Usuarios</h1>
    <a asp-action="Crear" class="btn btn-primary">Crear Usuario</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Nombre de usuario</th>
            <th>Rol</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var usuario in Model){
            <tr>
                <td>
                    @usuario.NombreDeUsuario
                </td>
                <td>
                    @usuario.RolUsuario.ToString()
                </td>
                <td>
                    <div class="d-flex justify-content-evenly my-auto">
                    <a asp-action="Editar"asp-route-id="@usuario.Id" class="btn btn-primary">Editar</a>
                    <form method="post">
                        <button asp-action="Borrar" asp-route-id="@usuario.Id" onclick="return confirm('Â¿Esta seguro que desea eliminar este usuario?');" class="btn btn-danger">Borrar</button>
                    </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
