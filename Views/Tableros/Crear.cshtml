@model tl2_proyecto_2024_Daggam.ViewModels.CrearTableroViewModel
@{
    ViewData["Title"] = "Crear Tablero";
}
<div class="container pt-4">
    <div class="row justify-content-center">
        <div class="col-5">
            <div class="card shadow">
                <div class="card-header"><h4 class="text-center">Crear tablero</h1></div>
                <div class="card-body">
                    <form asp-action="Crear">
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" autocomplete="off">
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4" style="resize: none;"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success d-block ms-auto">Crear</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
